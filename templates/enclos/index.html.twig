{% extends 'base.html.twig' %}

{% block title %}Menu de gestion du zoo{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Gestion des enclos du zoo</h1>
        <table class="mt-3 table table-striped">
            <tr>
                <th>Nom de l'enclos</th>
                <th></th>
                <th></th>
            </tr>
            {% for e in enclos %}
                <tr>
                    <td>{{ e.titre }}</td>
                    <td></td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path("app_enclos_modifier", {"id":c.id}) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path("app_enclos_supprimer", {"id":c.id}) }}">Supprimer</a>
                        <a class="btn btn-primary" href="{{ path("app_animaux", {"id":c.id}) }}">Voir les animaux</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <a href="{{ path("app_enclos_ajouter") }}" class="mt-5 mx-1 btn btn-success">Ajouter un enclos</a>
        <a href="{{ path("app_animaux_ajouter") }}" class="mt-5 mx-1 btn btn-success">Ajouter un animal</a>
    </div>
{% endblock %}